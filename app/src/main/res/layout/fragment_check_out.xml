<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="955dp"
            android:padding="16dp"
            android:layout_marginBottom="120dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Finalizar Compra"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_totals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_gray"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lblSubtotal"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Subtotal :              S/. "
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtSubtotal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lblIgv"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="IGV :              S/. "
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblSubtotal" />

                    <TextView
                        android:id="@+id/txtIgv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/txtSubtotal"
                        app:layout_constraintTop_toBottomOf="@+id/txtSubtotal" />

                    <TextView
                        android:id="@+id/lbDescuento"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Descuento :            - S/. "
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lblIgv" />

                    <TextView
                        android:id="@+id/txtDescuento"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/txtIgv"
                        app:layout_constraintTop_toBottomOf="@+id/txtIgv" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="4dp"
                    android:background="@android:color/darker_gray" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblTotal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Total a Pagar :           S/. "
                    android:textAlignment="textEnd"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textAlignment="textEnd"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_totals">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDiscountCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Código de Descuento"
                    android:inputType="textCapCharacters"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/btnApplyDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/fondo"
                    android:text="Aplicar"
                    android:textColor="@color/dorado" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_payment_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Método de Pago:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_discount" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_label"
                tools:layout_editor_absoluteX="0">

                <ImageButton
                    android:id="@+id/payTc"
                    android:layout_width="0dp"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:height="100dp"
                    android:button="@null"
                    android:checked="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tarjetas"
                    android:text="Tarjetas de CRedito" />

                <ImageButton
                    android:id="@+id/payPlin"
                    android:layout_width="0dp"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:height="100dp"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/payment_ico_yape_plin"
                    android:text="" />

                <ImageButton
                    android:id="@+id/payEntrega"
                    android:layout_width="0dp"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/contra_entrega"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FieldsTC"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:layout_editor_absoluteX="16dp">

                <TextView
                    android:id="@+id/lblTC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ingrese datos de tu Tarjeta"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/edit_text_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="creditCardNumber"
                    android:hint="Número de Tarjeta"
                    android:inputType="number"
                    android:maxLength="16"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/edit_text_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:autofillHints="name"
                    android:hint="Nombre del Titular"
                    android:inputType="textCapWords"
                    android:minHeight="48dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_text_expiry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints="creditCardExpirationDate"
                        android:hint="MM/AA"
                        android:inputType="number"
                        android:maxLength="5"
                        android:minHeight="48dp" />

                    <EditText
                        android:id="@+id/edit_text_cvv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:hint="CVV"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:minHeight="48dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fieldQR"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/FieldsTC"
                tools:layout_editor_absoluteX="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="Escanea el Código QR"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/qr" />

            </LinearLayout>

            <Button
                android:id="@+id/btnConfirmOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/fondo"
                android:paddingVertical="12dp"
                android:text="Confirmar Pedido"
                android:textColor="@color/dorado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fieldQR" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>